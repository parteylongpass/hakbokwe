<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/aboutus_logo"/>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="165dp"
        android:layout_marginTop="20dp"

        android:background="@color/thirdgray"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:padding="10dp"
            android:text="Q. 학생복지위원회에서는 어떤 일들을 하나요?"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:padding="8dp"
            android:text="@string/work"
            android:textSize="10dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="165dp"
        android:layout_marginTop="30dp"
        android:background="@color/thirdgray"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:padding="10dp"
            android:text="Q.학생복지위원회 지원은 어떻게 하나요?"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:padding="8dp"
            android:text="@string/apply"
            android:textSize="10dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/insta"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:text=" @ssubokji"
            android:textSize="13dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/kakao"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:text=" @숭실대학교 학생복지위원회"
            android:textSize="11dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tel. 02-820-1234"
            android:layout_marginTop="3dp"
            android:layout_marginStart="20dp"
            android:textSize="10dp"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>